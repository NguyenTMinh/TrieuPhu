<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/atp__activity_home_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/circle_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/atp__bg_circle_anim" />

        <ProgressBar
            android:indeterminateDrawable="@drawable/progress_two"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp" />

        <include
            android:id="@+id/layout_al"
            layout="@layout/fragment_home_after_load" />

    </RelativeLayout>
</layout>
